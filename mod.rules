
ID = aephiex.advanced_ammo_storage_and_supply

Name = "Advanced Ammo Storage ï¼† Supply"

Version = 1.0.0

CompatibleGameVersions = ["0.20.7"]

ModifiesMultiplayer = true

Author = "Aephiex"

Logo = "logo.png"

Description =
	"Adds an Ammo Storage that is armored and more durable. It also transfers its contents to the cannon or Ammo Storage in front of it. It costs more than storage bays and it does not offer roof access.\n\n"\
	"There are also counterparts for H.E. missile parts, E.M.P. missile parts, nuclear missile parts, and mine parts."

